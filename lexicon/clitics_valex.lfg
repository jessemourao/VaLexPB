	 	(^ PERS)=3
	  	(^ NUM)=sg
		(^ PRON-FORM)=%stem
	      	(^ CASE)=acc
	        (^ PRON-TYPE)= refl |
	        (^ SUBJ PERS)= 3
		{(^ SUBJ NUM)= sg|
		(^ SUBJ NUM)= pl}
	        (^ CL-FORM) = se};
	  C * (^ COMP-FORM)=se
   	      (^ CLAUSE-TYPE)=int.
	
