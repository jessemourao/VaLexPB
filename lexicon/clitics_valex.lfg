mim 	 CL * (^ PRED) = 'pro'
	      (^ PERS)=1
	      (^ NUM)=sg
	      (^ PRON-FORM)=%stem
	      (^ CASE)=obl
	      (^ NTYPE NSYN)=pronoun.

"me	  CL * (^ PRED) = 'pro'
	 	(^ PERS)=1
	  	(^ NUM)=sg
		(^ PRON-FORM)=%stem
	      	(^ CASE)=acc
	        (^ PRON-TYPE)=refl
		(^ NTYPE NSYN)=pronoun."

"me	  CL * 	(^ VMORPH)= cl. 
		(^ PRON-TYPE)= refl
	        (^ VTYPE)=c reflexive."


me	  CL * {(^ PRED) = 'pro'
	 	(^ PERS)=1
	  	(^ NUM)=sg
		(^ PRON-FORM)=%stem
	      	{(^ CASE)=acc | (^ CASE)=dat} "#Valex addition: allowing 'me' as an acusative or dative object -> Ele me enviou para Londres/ Ele me enviou flores'"
	        (^ PRON-TYPE)= pers
	    |  (^ SUBJ PERS)=1
 	       (^ SUBJ NUM)=sg
 	       (^ CL-FORM) = me}.


